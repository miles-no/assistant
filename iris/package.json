{
	"name": "miles-iris",
	"version": "1.0.0",
	"type": "module",
	"description": "IRIS - Miles' retro-futuristic AI assistant with HAL-like terminal interface",
	"main": "server.ts",
	"scripts": {
		"start": "tsx server.ts",
		"dev": "vite",
		"dev:server": "tsx watch server.ts",
		"build": "vite build",
		"build:watch": "vite build --watch",
		"preview": "vite preview",
		"type-check": "tsc --noEmit",
		"generate-types": "openapi-typescript ../api/openapi.yaml --output types/api.ts",
		"test": "playwright test",
		"test:ui": "playwright test --ui",
		"test:headed": "playwright test --headed",
		"prepare": "husky"
	},
	"keywords": [
		"ai",
		"assistant",
		"terminal",
		"retro",
		"hal",
		"booking",
		"mcp"
	],
	"author": "Miles",
	"license": "MIT",
	"dependencies": {
		"@anthropic-ai/sdk": "^0.9.1",
		"axios": "^1.6.2",
		"better-sqlite3": "^12.4.1",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"openai": "^4.20.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.6",
		"@playwright/test": "^1.56.1",
		"@types/better-sqlite3": "^7.6.11",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/node": "^24.9.0",
		"@vitejs/plugin-legacy": "^7.2.1",
		"husky": "^9.1.7",
		"jsdom": "^27.0.1",
		"openapi-fetch": "^0.15.0",
		"openapi-typescript": "^7.10.1",
		"tsx": "^4.19.2",
		"typescript": "^5.9.3",
		"vite": "^7.1.11",
		"vitest": "^2.1.9"
	}
}
