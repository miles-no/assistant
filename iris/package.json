{
  "name": "miles-iris",
  "version": "1.0.0",
  "type": "module",
  "description": "IRIS - Miles' retro-futuristic AI assistant with HAL-like terminal interface",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "vite",
    "dev:server": "node --watch server.js",
    "build": "vite build",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "generate-types": "openapi-typescript ../api/openapi.yaml --output types/api.ts",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed"
  },
  "keywords": [
    "ai",
    "assistant",
    "terminal",
    "retro",
    "hal",
    "booking",
    "mcp"
  ],
  "author": "Miles",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.9.1",
    "axios": "^1.6.2",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "openai": "^4.20.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.9.0",
    "@vitejs/plugin-legacy": "^7.2.1",
    "openapi-fetch": "^0.15.0",
    "openapi-typescript": "^7.10.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.11"
  }
}
