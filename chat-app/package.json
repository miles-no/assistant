{
	"name": "miles-booking-chat",
	"version": "1.0.0",
	"description": "AI-powered chat interface for Miles Booking System using Ollama and MCP",
	"main": "dist/server.js",
	"scripts": {
		"start": "node dist/server.js",
		"dev": "tsx watch server.ts",
		"build": "npm run build:server && npm run build:client",
		"build:server": "tsc",
		"build:client": "tsc -p tsconfig.client.json",
		"type-check": "tsc --noEmit && tsc -p tsconfig.client.json --noEmit"
	},
	"keywords": [
		"ollama",
		"mcp",
		"chat",
		"booking",
		"ai"
	],
	"author": "Miles",
	"license": "MIT",
	"dependencies": {
		"@anthropic-ai/sdk": "^0.67.0",
		"axios": "^1.12.2",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.1.0",
		"openai": "^6.5.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/node": "^24.9.1",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	}
}
